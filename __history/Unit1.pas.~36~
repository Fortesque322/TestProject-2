unit Unit1;

interface

const
  TWorkName: array [0 .. 2] of string = ('1', '2', '3');

type
  TWork = class
  strict private
    FName: string;
    FSecondName: string;
    FOld: integer;
    FWorkName: string;
  public
    constructor Create(old: integer; Name, SecondName, WorkName: string);
    destructor Destroy;
    procedure SetName(Name: string);
    procedure SetSecondName(SecondName: string);
    procedure SetWorkName(WorkName: string);
    procedure SetOld(old: integer);
    procedure Init;

    function GetName: string;
  end;

implementation

{ FWork }

constructor TWork.Create(old: integer; Name, SecondName, WorkName: string);
begin
  Init;
  FWorkName := WorkName;
  FName := Name;
  FSecondName := SecondName;
  FOld := old;

end;

destructor TWork.Destroy;
begin

end;



function TWork.GetName: string;
begin
  Result := FName;
end;

procedure TWork.Init;
begin
  FName := '';
  FSecondName := '';
  FOld := 0;
  FWorkName := '';
end;

procedure TWork.SetName(Name: string);
begin
  Name := FName;
end;

procedure TWork.SetOld(old: integer);
begin
  FOld := old;
end;

procedure TWork.SetSecondName(SecondName: string);
begin
  FSecondName := SecondName;
end;

procedure TWork.SetWorkName(WorkName: string);
begin
  FWorkName :=  WorkName;
end;

end.
